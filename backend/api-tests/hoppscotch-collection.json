                    ],
                    "body": {
                        "contentType": "application/json",
                        "body": "{\n  \"email\": \"admin@workit.co.ke\",\n  \"password\": \"admin123456\"\n}"
                    }
                },
                {
                    "v": "4",
                    "name": "Get Profile",
                    "method": "GET",
                    "endpoint": "{{base_url}}/auth/me",
                    "headers": [
                        {
                            "key": "Authorization",
                            "value": "Bearer {{access_token}}",
                            "active": true
